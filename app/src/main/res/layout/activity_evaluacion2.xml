<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoverdeclaro"
    android:orientation="vertical"
    tools:context=".Evaluacion2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btnRegresar"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="54dp"
                android:layout_height="65dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/izquierda"
                android:onClick="btnxE2"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/milkinice"
                android:gravity="center"
                android:text="Puntos"
                android:textColor="@color/black"
                android:textSize="45dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="30dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/milkinice"
            android:text="Selecciona la palabra correcta"
            android:textColor="@color/black"
            android:textSize="25dp" />
        <ImageButton
            android:id="@+id/idBTNimgE2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:onClick="btnImgE2"
            android:scaleType="fitXY"
            style="?android:attr/borderlessButtonStyle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/idtxtE2P1"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#ffffff"
                android:fontFamily="@font/calfine"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/colorfuxia"
                android:textSize="70dp" />
            <Button
                android:id="@+id/idtxtE2P2"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#ffffff"
                android:fontFamily="@font/calfine"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/coloramarillo"
                android:textSize="70dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/idtxtE2P3"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#ffffff"
                android:fontFamily="@font/calfine"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/colorceleste"
                android:textSize="70dp" />
            <Button
                android:id="@+id/idtxtE2P4"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#ffffff"
                android:fontFamily="@font/calfine"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/colorrojo"
                android:textSize="70dp" />
        </LinearLayout>
        <Button
            android:id="@+id/idtxtE2P5"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#ffffff"
            android:fontFamily="@font/calfine"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/verdeoscuro"
            android:textSize="70dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/butoon_ronder"
            android:text="Continuar"
            android:onClick="btnContinuar"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="18dp"
            app:backgroundTint="#12ED1B"
            app:backgroundTintMode="src_atop"
            app:layout_constraintBottom_toTopOf="@+id/button2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword" />
    </LinearLayout>

</ScrollView>