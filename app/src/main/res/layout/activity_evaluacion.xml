<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202732"
    android:orientation="vertical"
    tools:context=".Evaluacion">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btnRegresar"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="54dp"
                android:layout_height="65dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/izquierda"
                android:onClick="btnx"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/milkinice"
                android:gravity="center"
                android:text="Control EvaluaciÃ³n"
                android:textColor="#ffffff"
                android:textSize="35dp" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:layout_marginStart="15dp"
            android:text="Ordena la palabra:"
            android:textSize="25dp"
            android:textColor="#ffffff"/>

        <ImageButton
            android:id="@+id/btnImgCE"
            android:layout_width="267dp"
            android:layout_height="224dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="5dp"  />
        <EditText
            android:id="@+id/editText"
            android:layout_width="295dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/bgpurple"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#332FA2"
            android:textSize="32sp" />
        <LinearLayout
            android:id="@+id/layoutParent"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="15dp"
            android:layout_marginStart="25dp"
            android:text="Lee la siguiente palabra:"
            android:textSize="25dp"
            android:textColor="#ffffff"/>

        <EditText
            android:id="@+id/txtCEMuestra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/milkinice"
            android:gravity="center"
            android:text=""
            android:textColor="@color/verde"
            android:textSize="55dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnMicrofonoCE"
                android:layout_width="90dp"
                android:layout_height="93dp"
                android:background="@drawable/iconmicrofono" />

            <TextView
                android:id="@+id/txtCELee"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/milkinice"
                android:gravity="center"
                android:text="va leer"
                android:textColor="@color/verdeoscuro"
                android:textSize="30dp" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>